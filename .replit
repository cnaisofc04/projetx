modules = ["python-3.11", "web", "nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["openssl", "postgresql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Test API Basic"
author = 49008653
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_api_basic.py"

[[workflows.workflow]]
name = "Test Nouvelles API"
author = 49008653
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_nouvelles_api_complet.py"

[[workflows.workflow]]
name = "Test Tous Secrets"
author = 49008653
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_tous_secrets.py"

[[workflows.workflow]]
name = "Test Secrets Ultra-Complet"
author = 49158868
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_secrets_ultra_complet.py"

[[workflows.workflow]]
name = "Test Secrets Ultra V2"
author = 49158868
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_secrets_ultra_complet_v2.py"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "Test Modulaire Complet"
author = 49371554
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_platform_modulaire.py"

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 38875
externalPort = 3000
